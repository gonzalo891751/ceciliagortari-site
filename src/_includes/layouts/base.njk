<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <meta name="description" content="{{ description }}">
    <link rel="canonical" href="https://ceciliagortari.com.ar{{ page.url }}">

    <!-- Open Graph -->
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:type" content="{{ ogType | default('website') }}">
    <meta property="og:url" content="https://ceciliagortari.com.ar{{ page.url }}">
    <meta property="og:image" content="{{ ogImage | default('https://ceciliagortari.com.ar/assets/img/hero-diputados.jpg') }}">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ title }}">
    <meta name="twitter:description" content="{{ description }}">
    <meta name="twitter:image" content="{{ ogImage | default('https://ceciliagortari.com.ar/assets/img/hero-diputados.jpg') }}">

    {% if jsonLd %}
    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json">
    {{ jsonLd | safe }}
    </script>
    {% endif %}

    <!-- Favicon -->
    <link rel="shortcut icon" href="/favicon.ico?v=2">
    <link rel="icon" href="/favicon.ico?v=2" sizes="any">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?v=2">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?v=2">
    <link rel="icon" sizes="192x192" href="/android-chrome-192x192.png?v=2">
    <link rel="icon" sizes="512x512" href="/android-chrome-512x512.png?v=2">
    <link rel="manifest" href="/manifest.webmanifest?v=2">

    <!-- Google Fonts: Outfit -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700;900&display=swap" rel="stylesheet">

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Outfit', 'sans-serif'],
                    },
                    colors: {
                        brand: {
                            magenta: '#9F57A7',
                            blue: '#1C5CFF',
                            turquoise: '#24BCDE',
                            orange: '#FBA85F',
                            dark: '#2C2C31',
                            light: '#F7F7FD'
                        }
                    }
                }
            }
        }
    </script>

    <!-- Site CSS -->
    <link rel="stylesheet" href="/assets/css/site.css?v=202503061200">
    <link rel="stylesheet" href="/assets/css/additions.css?v=202503061200">
    
    {% if identityWidget %}
    <!-- Netlify Identity & Redirect -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script>
        if (window.location.hash.includes("recovery_token") || window.location.hash.includes("invite_token")) {
            window.location.href = "/admin/" + window.location.hash;
        }
    </script>
    {% endif %}

    <!-- Extra Head Content -->
    {% block head %}{% endblock %}
</head>

<body class="{{ bodyClass }} font-sans text-brand-dark bg-brand-light antialiased">
    
    {% include "partials/navbar.njk" %}

    {{ content | safe }}

    {% block scripts %}
    <script src="/assets/js/site.js?v=202503061200"></script>
    {% endblock %}
</body>

</html>
